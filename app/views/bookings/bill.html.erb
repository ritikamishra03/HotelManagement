<div class="container mt-6 mb-7">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-xl-7">
        <div class="card">
          <div class="card-body p-5">
            <h2>
              Hey,<%= @booking.user.name %>
            </h2>
            <p class="fs-sm">
              This is the receipt for a payment of <strong><%=@booking.total_cost %></strong> of the room you stayed.
            </p>

            <div class="border-top border-gray-200 pt-4 mt-4">
              <div class="row">
                <div class="col-md-6">
                  <div class="text-muted mb-2">Payment No.</div>
                  <strong>#88305</strong>
                </div>
                <div class="col-md-6 text-md-end">
                  <div class="text-muted mb-2">Check_out Date</div>
                  <strong><%=@booking.check_out%></strong>
                </div>
              </div>
            </div>

            <div class="border-top border-gray-200 mt-4 py-4">
              <div class="row">
                <div class="col-md-6">
                  <div class="text-muted mb-2">Client</div>
                  <strong>
                    <%=@booking.user.name%>
                  </strong>
                  <p class="fs-sm">
                     <%=@booking.user.email %>
                  </p>
                </div>
                <div class="col-md-6 text-md-end">
                  <div class="text-muted mb-2">Payment To</div>
                  <strong>
                    Hotel
                  </strong>
                  <p>
                  hotel@gmail.com
                  </p>
                </div>
              </div>
            </div>

            <table class="table border-bottom border-gray-200 mt-3">
              <thead>
                <tr>
                  <th scope="col" class="fs-sm text-dark text-uppercase-bold-sm px-0">Description</th>
                  <th scope="col" class="fs-sm text-dark text-uppercase-bold-sm text-end px-0">Amount</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="px-0">Room Type</td>
                  <td class="text-end px-0"><%= @booking.room.room_type.name %></td>
                </tr>
                <tr>
                  <td class="px-0">Room</td>
                  <td class="text-end px-0"><%= @booking.room.room_type.rate %></td>
                </tr>
                <tr>
                  <td class="px-0">Duration</td>
                  <td class="text-end px-0"><%= @booking.duration%></td>
                </tr>
              </tbody>
            </table>

              <div class="d-flex justify-content-end mt-3">
                <h5 class="me-3">Total:</h5>
                <h5 class="text-success"><%=@booking.total_cost %></h5>
              </div>
              <a class="btn btn-warning"<%= link_to 'Back to Bookings', bookings_path %></a>
            </div>
          </div>
          
          
        </div>
      </div>
    </div>
  </div>