
<h1> Booking Details </h1>

<p>
    <strong>Room Number:</strong>
    <%= @booking.room.room_number %>
</p>

<p>
    <strong>Room Type:</strong>
    <%= @booking.room.room_type.name %>
</p>


<p>
    <strong>Check In: </strong>
    <%= @booking.check_in %>
</p>

<p>
    <strong>Check Out: </strong>
    <%= @booking.check_out %>
</p>

<p>
    <strong>Status: </strong>
    <%= @booking.status %>
</p>

<% if current_user.admin? || current_user.staff? %>
<% if @booking.status != 'checked_in' %>
  <%= button_to 'Check In', check_in_booking_path(@booking), method: :patch, data: { confirm: 'Are you sure you want to check in this guest?' } %>
<% end %>

<% if @booking.status == 'checked_in' && @booking.status != 'checked_out' %>
  <%= button_to 'Check Out', check_out_booking_path(@booking), method: :patch, data: { confirm: 'Are you sure you want to check out this guest?' } %>
<% end %>
<% end %>

<a class="btn btn-warning"<%= link_to 'Back', bookings_path %></a>
    