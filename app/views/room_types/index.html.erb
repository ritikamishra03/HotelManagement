<h1>Room Types</h1>

<a class="btn btn-warning"<%= link_to "New Room Type", new_room_type_path %></a>

<table class="table table-hover table-light">
    <thead>
    <tr>
        <th>Name</th>
        <th>Rate</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @room_types.each do |room_type| %>
        <tr>
        <td><%= room_type.name %></td>
        <td><%=  room_type.rate %></td>
        <td><a class="btn btn-warning"<%= link_to 'show',room_type_path(room_type.id) %></a></td>
        <td><a class="btn btn-warning"<%= link_to 'edit', edit_room_type_path(room_type.id) %></a></td>
        <td><a class="btn btn-warning"<%= link_to 'delete',room_type_path(room_type.id), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></a></td>
        </tr>
    <% end %>
    </tbody>
</table>
<a class="btn btn-warning" <%= link_to 'Back', admin_path %></a>
