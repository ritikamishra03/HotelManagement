<h1>Room</h1>

<a class="btn btn-warning"<%= link_to 'New Room', new_room_path %></a>

<table class="table table-hover table-light">
    <thead>
    <tr>
        <th>Room Number</th>
        <th>Room</th>
        <th>Status</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @rooms.each do |room| %>
        <tr>
        <td><%= room.room_number %></td>
        <td><%= room.room_type.name %></td>
        <td><%= room.status %></td>
        <td><a class="btn btn-warning"<%= link_to 'show',room_path(room.id) %></a></td>
        <td><a class="btn btn-warning"<%= link_to 'edit', edit_room_path(room.id) %></a></td>
        <td><a class="btn btn-warning"<%= link_to 'delete',room_path(room.id), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></a></td>
        </tr>
    <% end %>
    </tbody>
</table>
<a class="btn btn-warning" <%= link_to 'Back', admin_path %></a>
