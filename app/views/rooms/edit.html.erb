<h1><%= action_name.capitalize %> Room</h1>

<%= form_with(model: @room, local: true) do |form| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :room_number %>
    <%= form.text_field :room_number %>
  </div>

  <div class="mb-3 ">
    <%= form.label :room_id %>
    <%= form.collection_select :room_type_id, @room_types, :id, :name %>
  </div>

  <div class="mb-3">
    <%= form.label :status %>
    <%= form.select :status, Room::STATUSES %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<br>

