<h1>Users</h1>

<table class="table table-hover table-light">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email%></td>
            <td><%= user.role%></td>
            <td><a class="btn btn-warning"<%= link_to 'Edit', edit_user_path(user) %></a></td>
            <td><a class="btn btn-warning"<%= link_to 'delete',user_path(user), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></a></td>
        </tr>
    <% end %>
    <tbody>
</table>
<a class="btn btn-warning" <%= link_to 'Back', admin_path %></a>
